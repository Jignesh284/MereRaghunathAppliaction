<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/ramdarbar"
    tools:context="sumanbhaiji.org.mereraghunath_.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="|| मेरे रघुनाथ || "
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorDarkOrange"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/colorLightBlue"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnHanumanChalisa"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="श्रीहनुमान चालीसा "
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/colorLightAccent"
                android:layout_marginTop="30dp"
                />


            <Button
                android:id="@+id/btnRamCharitManas"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="श्रीरामचरित मानस  "
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/colorLightAccent"
                android:layout_marginTop="30dp"
                />
            <Button
                android:id="@+id/btnRamRakshaStotra"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="श्रीरामरक्षास्तोत्रम्‌"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@color/colorLightAccent"
                android:layout_marginTop="30dp"
                />
            <!--<TextView-->
                <!--android:layout_margin="10dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="20dp"-->
                <!--android:background="@color/colorAccent"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:padding="20dp"-->
                <!--android:text="if you want to have any problem in your life health, Bussiness, financial we have a solution for it"/>-->
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" >
        </Space>

        <Button
            android:id="@+id/btnYoutube"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/youtube"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/facebook"

            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>


        <Button
            android:id="@+id/btnTwitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/twitter"
             />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" >
        </Space>
        <!--<Button-->
        <!--android:id="@+id/btnWhatsapp"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:background="@drawable/whatsapp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--/>-->
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
